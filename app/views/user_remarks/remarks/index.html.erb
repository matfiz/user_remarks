<h1>Listing Messages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>User</th>
      <th>User type</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @remarks.each do |message| %>
      <tr>
        <td><%= message.title %></td>
        <td><%= message.text %></td>
        <td><%= message.user_id %></td>
        <td><%= message.user_type %></td>
        <td><%= message.link %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_remark_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

